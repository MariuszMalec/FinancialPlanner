@model FinancialPlanner.Logic.Dtos.TransactionUserDto

@{
    ViewData["Title"] = "Details";
}

<div class="row-md-4 col-xs-3 border-primary mb-3">
    <div class="card mb-3" style="max-width: 540px; background-image: url('https://plus.unsplash.com/premium_photo-1678139636101-d9eeee5c67f1?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover;">
        <div class="row g-0">
            <div class="rows-md-12">
                <div class="card-header text-white bg-info">
                    <p class="card-text">
                        <h5 class="card-title">
                            Details
                        </h5>
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <img src="@Model.Picture" alt=""
                     style="object-fit:scale-down;
                            width:100%;
                            height:auto;
                            border: solid 1px #CCC">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h5 class="card-title text-warning fw-bold">@Model.Description.ToUpper()</h5>
                    <p class="card-text text-warning fw-bold">@Model.FirstName @Model.LastName</p>
                    <p class="card-text badge bg-danger text-white">@Model.Type: @Model.Amount</p>
                    <p class="card-text text-dark fw-bold">BALANCE: @Model.Balance</p>
                    <p class="card-text text-dark">Created: @Model.CreatedAt.ToShortDateString()</p>
                    <a class="btn btn-success" asp-action="Index">Back to transactions</a>
                </div>
            </div>
        </div>
    </div>
</div>