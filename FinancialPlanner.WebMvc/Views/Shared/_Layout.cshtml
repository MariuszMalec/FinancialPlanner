<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinancialPlanner.WebMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinancialPlanner.WebMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ButtonStyle.css" />
    <link rel="stylesheet" href="~/css/InputStyle.css" />
    <link rel="stylesheet" href="~/css/Main.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <script src="~/lib/Chart-js/chart.js"></script>
    <script src="~/lib/palette/palette.js"></script>

</head>
<body class="mybody-bg-image">
    <header>
        <nav style="background-color: lightblue;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 font-weight-bold">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FinancialPlanner.WebMvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <partial name="_HeadPanel" />

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="dropdown">
                            <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bg-primary bi-gear"></i> Managment
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="User" asp-action="Index"> <i class="bi bi-person"></i> Users</a>
                                <a class="dropdown-item" asp-controller="Roles" asp-action="Index"> <i class="bi bi-person-square"></i> Roles</a>
                                <a class="dropdown-item" asp-controller="Transactions" asp-action="Index"> <i class="bi bi-shop"></i> Transactions</a>
                                <a class="dropdown-item" asp-controller="TransactionUser" asp-action="Index"> <i class="bi bi-person-lines-fill"></i> UserTransactions</a>
                                <a class="dropdown-item" asp-controller="Transactions" asp-action="GetMonthlyIncomeAndExpenses"> <i class="bi bi-list-stars"></i> Balance</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FinancialPlanner.WebMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
