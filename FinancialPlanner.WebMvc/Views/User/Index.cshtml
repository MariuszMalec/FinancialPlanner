                                </li>
                                <li>
                                    <div class="form-group">
                                    <button class="button-92 bi bi-box-arrow-in-left" type="submit" onclick="@("window.location.href='" + @Url.Action("AddTransaction", "User", new {id = item.Id}) + "'");"> AddTransaction</button>
                                    </div>
                                </li>
