@model IEnumerable<FinancialPlanner.Logic.Dtos.TransactionUserDto>

@{
    ViewData["Title"] = "Index";
    var balance = Convert.ToDecimal(ViewData["MontlyBalance"]);
}

<h1>Transactions User @ViewData["FullName"]</h1>

@if (balance < 2400 && balance >= 1000)
{
    <h2 style="color:green">MontlyBalance:  @balance</h2>
}
else if (balance < 1000 && balance >= 300)
{
    <h2 style="color:orange">MontlyBalance:  @balance</h2>
}
else if (balance < 300)
{
    <h2 style="color:red">MontlyBalance:  @balance</h2>
}
else
{
    <h2>MontlyBalance:  @balance</h2>
}

<p>
    <a class="btn btn-success" asp-controller="TransactionUser" asp-action="Create" asp-route-id=@ViewData["UserId"]><img class="rounded" alt="Image placeholder" src="~/icons/addTransactionX32.png">AddTransaction</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.ActionLink("CreatedAt", "GetUserTransactions", new { sortOrder = ViewBag.DateSortParm, currentFilter=ViewBag.CurrentFilter })
                @* @Html.DisplayNameFor(model => model.CreatedAt) *@
            </th>
            <th>
                @Html.ActionLink("Amount", "GetUserTransactions", new { sortOrder = ViewBag.NameSortParm, currentFilter=ViewBag.CurrentFilter })
                @*@Html.DisplayNameFor(model => model.Amount)*@
            </th>
            <th>    
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceAfterTransaction)
            </th>
            <th>
                @Html.ActionLink("Type", "GetUserTransactions", new { sortOrder = ViewBag.TypeSortParm, currentFilter=ViewBag.CurrentFilter })
                @*@Html.DisplayNameFor(model => model.Type)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
  

                    @if (item.Type == FinancialPlanner.Logic.Enums.TypeOfTransaction.Income)
                    {
                    <td style="color: green; font-size: large; font-weight: bold">
                            @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    }
                    else
                    {
                    <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    }             

                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.BalanceAfterTransaction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a data-toggle="tooltip" data-placement="top" title="Create" asp-controller="TransactionUser" asp-action="Create" asp-route-id="@item.UserId"><img class="rounded" alt="Image placeholder" src="~/icons/addTransactionX32.png"></a>
                    <a data-toggle="tooltip" data-placement="top" title="Edit" asp-controller="TransactionUser" asp-action="Edit" asp-route-id="@item.Id"><img class="rounded" alt="Image placeholder" src="~/icons/editX32.png"></a>
                    <a data-toggle="tooltip" data-placement="top" title="Details" asp-controller="TransactionUser" asp-action="Details" asp-route-id="@item.Id"><img class="rounded" alt="Image placeholder" src="~/icons/detailsX32.png"></a>
                    <a data-toggle="tooltip" data-placement="top" title="Delete" asp-controller="TransactionUser" asp-action="Delete" asp-route-id="@item.Id"><img class="rounded" alt="Image placeholder" src="~/icons/deleteX32.png"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    td {
        font-style: italic;
        font-size: 14px;
        border-block-color: darkblue;
        border-left-color: darkblue;
        border-right-color: darkblue;
        border-width: 0.75ex 0.75ex 0.25ex;
    }


    thead {
        font-variant: small-caps;
        background-color: lightcoral;
        border-block-color: darkgreen;
        border-left-color: darkgreen;
        border-right-color: darkgreen;
        border-bottom-color: darkgreen;
        border-width: 0.75ex 0.5ex 0.25ex;
    }

    th {
        border-width: 0.75ex 0.75ex 0.25ex;
    }
</style>
